<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./template/head') %>
	<title>Document</title>
</head>
<body>
	<%- include('./template/navbar') %>
	<div class="container">
		<table class="table table-hover">
				<thead>
					<tr class="row">
						<th class="col-2">獎項種類</th>
						<th class="col-2">獎項名稱</th>
						<th class="col-4">獎項說明</th>
						<th class="col-2">中獎機率</th>
						<!-- <th scope="col">圖片</th> -->
						<th class="col-2"></th>
					</tr>
				</thead>
				<tbody>
					<% lotteries.forEach( function(lottery) { %>
					<tr class="row">
						<td class="col-1"><%= lottery.type %></td>
						<td class="col-1">- <%= lottery.index %></td>
						<td class="col-2"><%= lottery.prize %></td>
						<td class="col-4"><%= lottery.description %></td>
						<td class="col-2"><%= lottery.probability %></td>
						<!-- <td><%= lottery.url %></td> -->
						<td class="col-2">
							<% if (userId) { %>
							<a class="btn btn-outline-primary" href="/update/<%= lottery.id %>">修改</a>
							<a class="btn btn-outline-primary" href="/delete/<%= lottery.id %>">刪除</a>
							<% } %>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
	</div>
</body>
</html>
