<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('./template/head') %>
	<title>Document</title>
</head>

<body>
	<%- include('./template/navbar') %>
	<div class="container">

		<% if(errorMessage && errorMessage.length > 0) {  %>
		<div class="alert alert-danger" role="alert">
			<%= errorMessage %>
		</div>
		<% } %>

		<form method="POST" action="/update-handle/<%= lottery.id %>">
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">獎項種類</label>
				<label class="col-sm-5 col-form-label"><%= lottery.type %></label>
				<input name="type"" type="hidden" class="form-control" value="<%= lottery.type %>">
				<div class="col-sm-5">
					<input name="index"" type="number" class="form-control" placeholder="輸入獎項索引" value="<%= lottery.index %>">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">獎項名稱</label>
				<div class="col-sm-10">
					<input name="prize" type="text" class="form-control" value="<%= lottery.prize %>">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">獎項說明</label>
				<div class="col-sm-10">
					<input name="description" type="text" class="form-control" value="<%= lottery.description %>">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">圖形位置</label>
				<div class="col-sm-10">
					<input name="url" type="text" class="form-control" value="<%= lottery.url %>">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">中獎機率</label>
				<div class="col-sm-10">
					<input name="probability" type="number"" class=" form-control" value="<%= lottery.probability %>">
				</div>
			</div>
			<button type="submit" class="btn btn-primary">修改</button>
		</form>
	</div>
</body>

</html>